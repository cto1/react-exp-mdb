{
  "name": "lesson1",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines":{
    "node":"^6.8.1"
  },
  "scripts": {
    "dev:api": "better-npm-run dev:api",
    "dev:client": "better-npm-run dev:client",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:client\"",
    "prod:server": "better-npm-run prod:server",
    "prod:client": "better-npm-run prod:client",
    "prod": "concurrently \"npm run prod:server\" \"npm run prod:client\""
  },
  "betterScripts": {
    "dev:api": {
      "command": "nodemon --exec babel-node api/index.js",
      "env": {
        "NODE_ENV": "development",
        "SERVER_PORT": 3000
      }
    },
    "dev:client": {
      "command": "nodemon --exec babel-node server.js",
      "env": {
        "NODE_ENV": "development",
        "API_PORT": 3030
      }
    },
    "prod:server": {
      "command": "webpack --config webpack.config.server.js",
      "env": {
        "NODE_ENV": "production",
        "SERVER_PORT": 3000,
        "API_PORT": 3030
      }
    },
    "prod:client": {
      "command": "webpack --config webpack.config.client.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-transform-runtime": "^6.15.0",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-latest": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.11",
    "concurrently": "^3.1.0",
    "copy-webpack-plugin": "^3.0.1",
    "css-loader": "^0.25.0",
    "eslint": "^3.7.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-import": "^1.16.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.3.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-webpack-plugin": "^2.22.0",
    "inline-environment-variables-webpack-plugin": "^1.1.0",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "postcss-loader": "^0.13.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2",
    "webpack-merge": "^0.14.1",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "axios": "^0.15.0",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "mongoose": "^4.6.3",
    "react": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-router": "^2.8.1"
  }
}
